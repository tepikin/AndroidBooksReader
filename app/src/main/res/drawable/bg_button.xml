<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
	<item
		android:state_focused="true"
		>
		<shape>
			<gradient
				android:endColor="#99000080"
				android:startColor="#cc000080"
				android:angle="-180" />
			<stroke
				android:width="2dp"
				android:color="#e2e2e2" />
			<corners
				android:radius="5dp" />
		</shape>
	</item>
	<item
		android:state_pressed="true"
		>
		<shape>
			<gradient
				android:endColor="#99000080"
				android:startColor="#cc000080"
				android:angle="-180" />
			<stroke
				android:width="2dp"
				android:color="#e2e2e2" />
			<corners
				android:radius="5dp" />
		</shape>
	</item>
	<item
		android:state_selected="true"
		>	
		<shape>
			<gradient
				android:endColor="#99000090"
				android:startColor="#cc000090"
				android:angle="-180" />
			<stroke
				android:width="4dp"
				android:color="#e2e2e2" />
			<corners
				android:radius="5dp" />
		</shape>
	</item>
	<!-- normal state -->
	<item>
		<shape>
			<stroke
				android:width="1dp"
				android:color="#e2e2e2" />
			<corners
				android:radius="5dp" />
		</shape>
	</item>
</selector>

