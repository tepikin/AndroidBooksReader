<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
	
    
    <item android:state_pressed="true">
		<shape android:shape="rectangle">
		   	<solid android:color="#99daf2" />
		   
			<corners
				android:radius="2dp"  />
		</shape>
	</item>
	
	<!-- normal state -->
	<item>
		<shape  android:shape="rectangle">
		   		<stroke android:color="#d3d3d3" android:width="1dip" />
			<corners
				android:radius="2dp"  />
		</shape>
	</item>
</selector>

